---
# Secret for sensitive Platform API configuration
# IMPORTANT: This is a placeholder. In production, use External Secrets Operator
# to fetch these from Azure Key Vault.
apiVersion: v1
kind: Secret
metadata:
  name: platform-api-secrets
  namespace: platform
  labels:
    app.kubernetes.io/name: platform-api
    app.kubernetes.io/component: secret
type: Opaque
stringData:
  # Argo CD API token (created via: argocd account generate-token --account platform-api)
  ARGOCD_TOKEN: ""  # TODO: Populate via ESO

  # GitHub personal access token (needs repo write access)
  GITHUB_TOKEN: ""  # TODO: Populate via ESO

  # OpenAI API key (for AI operations)
  OPENAI_API_KEY: ""  # TODO: Populate via ESO
