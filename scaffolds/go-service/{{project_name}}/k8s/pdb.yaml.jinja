apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: {{ project_name }}
  namespace: {{ namespace }}
  labels:
    app.kubernetes.io/name: {{ project_name }}
    app.kubernetes.io/instance: {{ project_name }}
    app.kubernetes.io/version: "1.0.0"
    app.kubernetes.io/component: service
    app.kubernetes.io/part-of: {{ project_name }}
    app.kubernetes.io/managed-by: argocd
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: {{ project_name }}
      app.kubernetes.io/instance: {{ project_name }}
  {% if replicas >= 3 -%}
  minAvailable: 2  # For 3+ replicas, keep at least 2 available during disruptions
  {%- else -%}
  maxUnavailable: 1  # For 2 replicas, allow at most 1 unavailable
  {%- endif %}
