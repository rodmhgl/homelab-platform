# Build stage — full Go toolchain for compilation
FROM golang:1.23-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

WORKDIR /build

# Copy go.mod and go.sum for dependency caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the binary with optimizations
# - CGO_ENABLED=0 for static binary (no C dependencies)
# - -ldflags="-s -w" strips debug info for smaller binary
# - -trimpath removes local paths from binary for reproducibility
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags="-s -w" \
    -trimpath \
    -o /build/{{ project_name }} \
    .

# Runtime stage — minimal Alpine image
FROM alpine:3.19

# Install CA certificates for HTTPS requests
RUN apk add --no-cache ca-certificates tzdata && \
    addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

WORKDIR /app

# Copy binary from build stage
COPY --from=builder /build/{{ project_name }} /app/{{ project_name }}

# Copy timezone data for time operations
COPY --from=builder /usr/share/zoneinfo /usr/share/zoneinfo

# Switch to non-root user (required by Gatekeeper policy)
USER appuser

# Expose HTTP port
EXPOSE {{ http_port }}
{%- if include_grpc %}

# Expose gRPC port
EXPOSE {{ grpc_port }}
{%- endif %}

# Health check endpoint (optional — K8s probes prefer direct HTTP)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD ["/app/{{ project_name }}", "health"] || exit 1

# Run the application
ENTRYPOINT ["/app/{{ project_name }}"]
